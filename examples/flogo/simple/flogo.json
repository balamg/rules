{
  "name": "simplerules",
  "type": "flogo:app",
  "version": "0.0.1",
  "description": "Sample Flogo App",
  "appModel": "1.0.0",
  "imports": [
    "github.com/project-flogo/contrib/trigger/rest",
    "github.com/project-flogo/rules/ruleaction",
    "github.com/project-flogo/contrib/activity/log",
    "github.com/project-flogo/contrib/trigger/rest",
    "github.com/project-flogo/flow",
    "github.com/project-flogo/contrib/function/string",
    "github.com/project-flogo/rules/trigger/trule",
    "github.com/project-flogo/contrib/activity/actreturn"

  ],
  "properties": [
    {
      "name": "name",
      "type": "string",
      "value": "testprop"
    }
  ],
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/test/:tupleType"
          },
          "actions": [
            {
              "id": "simple_rule",
              "input": {
                "tupletype": "=$.pathParams.tupleType",
                "values": "=$.queryParams"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "handlerules",
      "ref": "github.com/project-flogo/rules/trigger/trule",
      "settings": {
        "rs": "res://rulesession:simple"
      },
      "handlers": [
        {
          "settings": {
            "rulename": "bob"
          },
          "action": {
            "ref": "#flow",
            "settings": {
              "flowURI": "res://flow:rule_bob"
            },
            "input": {
              "rs": "=$.rs",
              "ctx": "=$.ctx",
              "rulename": "=$.rulename",
              "tuples": "=$.tuples"
            }
          }
        },
        {
          "settings": {
            "rulename": "samenames"
          },
          "action": {
            "ref": "#flow",
            "settings": {
              "flowURI": "res://flow:rule_samenames"
            },
            "input": {
              "rs": "=$.rs",
              "ctx": "=$.ctx",
              "rulename": "=$.rulename",
              "tuples": "=$.tuples"
            }
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "ref": "github.com/project-flogo/rules/ruleaction",
      "settings": {
        "ruleSessionURI": "res://rulesession:simple",
        "tds": [
          {
            "name": "n1",
            "properties": [
              {
                "name": "name",
                "type": "string",
                "pk-index": 0
              }
            ]
          },
          {
            "name": "n2",
            "properties": [
              {
                "name": "name",
                "type": "string",
                "pk-index": 0
              }
            ]
          }
        ]
      },
      "id": "simple_rule"
    }
  ],
  "resources": [
    {
      "id": "rulesession:simple",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "values",
              "type": "string"
            },
            {
              "name": "tupletype",
              "type": "string"
            }
          ],
          "output": [
            {
              "name": "outputData",
              "type": "any"
            }
          ]
        },
        "rules": [
          {
            "name": "bob",
            "conditions": [
              {
                "expression" : "$.n1.name == 'Bob'"
              }
            ]
          },
          {
            "name": "samenames",
            "conditions": [
              {
                "expression" : "$.n1.name == $.n2.name"
              }
            ]
          }
        ]
      }
    },
    {
      "id": "flow:rule_bob",
      "data": {
        "name": "LogTempEvent",
        "metadata": {
          "input": [
            {
              "name": "rs",
              "type": "string"
            },
            {
              "name": "ctx",
              "type": "string"
            },
            {
              "name": "rulename",
              "type": "string"
            },
            {
              "name": "tuples",
              "type": "object"
            }
          ],
          "output": [
            {
              "name": "anOutput",
              "type": "string"
            }
          ]
        },
        "tasks": [
          {
            "id": "log3",
            "name": "log3",
            "description": "log tuples",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "=string.concat( \"BOB_RS:\",$flow.rs, \"RN:\",$flow.rulename, \"CTX:\", $flow.ctx, \"TPL:\", $flow.tuples )",
                "details": "true"
              }
            }
          }
        ]
      }
    },
    {
      "id": "flow:rule_samenames",
      "data": {
        "name": "LogTempEvent",
        "metadata": {
          "input": [
            {
              "name": "rs",
              "type": "string"
            },
            {
              "name": "ctx",
              "type": "string"
            },
            {
              "name": "rulename",
              "type": "string"
            },
            {
              "name": "tuples",
              "type": "object"
            }
          ],
          "output": [
            {
              "name": "anOutput",
              "type": "string"
            }
          ]
        },
        "tasks": [
          {
            "id": "log3",
            "name": "log3",
            "description": "log tuples",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "=string.concat( \"SAMENAMES_RS:\",$flow.rs, \"RN:\",$flow.rulename, \"CTX:\", $flow.ctx, \"TPL:\", $flow.tuples )",
                "details": "true"
              }
            }
          }
        ]
      }
    }
  ]
}