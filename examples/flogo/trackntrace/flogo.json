{
  "name": "trackntrace",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "name": "moveevent",
          "settings": {
            "method": "GET",
            "path": "/test/me"
          },
          "action": {
            "id": "simple_rule",
            "mappings": {
              "input": [
                {
                  "mapTo": "values",
                  "type": "assign",
                  "value": "$.queryParams"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "simple_rule",
      "ref": "github.com/project-flogo/rules/ruleaction",
      "settings": {
        "ruleSessionURI": "res://rulesession:simple",
        "tds": [
          {
            "name": "package",
            "properties": [
              {
                "name": "id",
                "type": "string",
                "pk-index": 0
              },
              {
                "name": "state",
                "type": "string"
              }
            ]
          },
          {
            "name": "moveevent",
            "ttl": 0,
            "properties": [
              {
                "name": "id",
                "type": "string",
                "pk-index": 0
              },
              {
                "name": "packageid",
                "type": "string"
              },
              {
                "name": "sitting",
                "type": "double"
              },
              {
                "name": "moving",
                "type": "double"
              },
              {
                "name": "dropped",
                "type": "double"
              }
            ]
          },
          {
            "name": "movetimeoutevent",
            "ttl": 0,
            "properties": [
              {
                "name": "id",
                "type": "string",
                "pk-index": 0
              },
              {
                "name": "packageid",
                "type": "string"
              },
              {
                "name": "timeoutinmillis",
                "type": "integer"
              }
            ]
          }
        ]
      }
    }
  ],
  "resources": [
    {
      "id": "rulesession:simple",
      "data": {
        "rules": [
          {
            "name": "printPackageRule",
            "conditions": [
              {
                "name": "cPackageEvent",
                "identifiers": [
                  "package"
                ],
                "evaluator": "cPackageEvent"
              }
            ],
            "actionFunction": "aPrintPackage"
          },
          {
            "name": "printMoveEventRule",
            "conditions": [
              {
                "name": "cMoveEvent",
                "identifiers": [
                  "moveevent"
                ],
                "evaluator": "cMoveEvent"
              }
            ],
            "actionFunction": "aMoveEvent"
          },
          {
            "name": "joinMoveEventAndPackageEventRule",
            "conditions": [
              {
                "name": "cJoinMoveEventAndPackage",
                "identifiers": [
                  "moveevent",
                  "package"
                ],
                "evaluator": "cJoinMoveEventAndPackage"
              }
            ],
            "actionFunction": "aJoinMoveEventAndPackage"
          },
          {
            "name": "aMoveTimeoutEventRule",
            "conditions": [
              {
                "name": "cMoveTimeoutEvent",
                "identifiers": [
                  "movetimeoutevent"
                ],
                "evaluator": "cMoveTimeoutEvent"
              }
            ],
            "actionFunction": "aMoveTimeoutEvent"
          },
          {
            "name": "joinMoveTimeoutEventAndPackage",
            "conditions": [
              {
                "name": "cJoinMoveTimeoutEventAndPackage",
                "identifiers": [
                  "movetimeoutevent",
                  "package"
                ],
                "evaluator": "cJoinMoveTimeoutEventAndPackage"
              }
            ],
            "actionFunction": "aJoinMoveTimeoutEventAndPackage"
          },
          {
            "name": "packageInSittingRule",
            "conditions": [
              {
                "name": "cPackageInSitting",
                "identifiers": [
                  "package.state"
                ],
                "evaluator": "cPackageInSitting"
              }
            ],
            "actionFunction": "aPackageInSitting"
          }
        ]
      }
    }
  ]
}